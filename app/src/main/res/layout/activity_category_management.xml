<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ihandy.a2014011425.CategoryManagementActivity">
    <include layout="@layout/actionbar_category_management"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="Watched"/>
    <ListView
        android:id="@+id/category_management_list_watched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    </ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="Unwatched"/>
    <ListView
        android:id="@+id/category_management_list_unwatched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    </ListView>
</LinearLayout>
